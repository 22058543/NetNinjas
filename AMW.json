    "layout": {
      "sidebar": {
        "width": "240px",
        "position": "left",
        "collapsible": true,
        "collapsed": false
      },
      "main": {
        "padding": "24px",
        "maxWidth": "1200px",
        "grid": {
          "dashboard": {
            "columns": 3,
            "gap": "24px",
            "responsive": {
              "tablet": 2,
              "mobile": 1
            }
          },
          "storyEditor": {
            "areas": [
              "editor-header editor-header",
              "editor-form chapters-panel",
              "editor-form moments-panel"
            ],
            "columns": "1fr 400px",
            "rows": "auto 1fr auto",
            "gap": "24px"
          }
        }
      },
      "header": {
        "height": "64px",
        "padding": "0 24px"
      }
    },
    "api": {
      "baseUrl": "https://api.amomentwith.com/v1",
      "endpoints": {
        "stories": "/stories",
        "chapters": "/chapters",
        "moments": "/moments",
        "upload": "/upload",
        "user": "/user"
      },
      "methods": {
        "getStories": "GET /stories",
        "createStory": "POST /stories",
        "updateStory": "PUT /stories/{id}",
        "deleteStory": "DELETE /stories/{id}",
        "uploadMedia": "POST /upload",
        "createChapter": "POST /chapters",
        "addMoment": "POST /moments"
      }
    },
    "validation": {
      "rules": {
        "storyTitle": {
          "required": true,
          "minLength": 1,
          "maxLength": 100,
          "message": "Title is required and must be between 1-100 characters"
        },
        "chapterName": {
          "required": true,
          "minLength": 1,
          "maxLength": 50,
          "message": "Chapter name is required and must be between 1-50 characters"
        },
        "fileUpload": {
          "maxSize": 52428800,
          "allowedTypes": ["image/*", "video/*", "audio/*"],
          "maxFiles": 10,
          "message": "File must be under 50MB and of supported format"
        }
      }
    },
    "notifications": {
      "autosave": {
        "enabled": true,
        "interval": 30000,
        "message": "Story auto-saved"
      },
      "uploadProgress": {
        "enabled": true,
        "showPercentage": true
      },
      "uploadComplete": {
        "enabled": true,
        "showPreview": true
      },
      "errors": {
        "enabled": true,
        "duration": 5000
      }
    }
